	if (id != "#") {
		d3.select(id).select(".areaMini").style("fill", "lightsteelblue");
	}
}

function darken() {
	var id = "#" + event.target.id;
	if (id != "#") {
		d3.select(id).select(".areaMini").style("fill", "steelblue");
	}
}