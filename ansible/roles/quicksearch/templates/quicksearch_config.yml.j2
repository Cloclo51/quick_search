defaults: &defaults
  theme: 'quicksearch_generic_theme'
  searchers: [best_bets,wikipedia,open_library]
  found_types: [wikipedia,open_library]
  per_page: 3
  max_per_page: 50
  http_timeout: 1
  xhr_http_timeout: 15
# google_analytics_tracking_id: ""
  user: "stats"
  password: "stats"

  on_campus:
    - !ruby/regexp '/^192\.(1|168)\.\d*\.\d*$/'


  common_searches: ["web of science", "google scholar", "refworks", "harvard business review", "pubmed", "ieee"]

  common_website_searches: ["dissertations", "exhibits", "textbooks", "visit the libraries", "government information", "literature review", "printing"]

  loaded_searches:
    - name: "Google Scholar"
      landing_page: "http://scholar.google.com/"
      query: "https://scholar.google.com/scholar?hl=en&q="
    - name: "NCSU Electronic Theses & Dissertations"
      landing_page: "http://www.lib.ncsu.edu/guides/etds/"
      query: "http://repository.lib.ncsu.edu/ir/handle/1840.16/1/simple-search?query="
    - name: "Historical State Search"
      landing_page: "http://historicalstate.lib.ncsu.edu/search"
      query: "http://historicalstate.lib.ncsu.edu/search/?q="
    - name: "Google Scholar"
      landing_page: "http://www.lib.ncsu.edu/articles/google-scholar/"
      query: "http://proxying.lib.ncsu.edu/index.php?url=http://scholar.google.com/scholar?q="

  loaded_website_searches:
    - name: "Books, Articles, Journals & More"
      landing_page: "http://search.lib.ncsu.edu"
      query: "http://search.lib.ncsu.edu/?q="

  doi_loaded_link: "http://js8lb8ft5y.search.serialssolutions.com/criteriarefiner/?SS_doi="

  best_bets:
    solr_url: "http://www.lib.ncsu.edu:8780/apache-solr-3.5.0/bestbets/select?"

